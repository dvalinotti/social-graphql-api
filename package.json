{
  "name": "social-graphql-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn mongo\" \"yarn run start:watch\"",
    "mongo": "mongod --dbpath=./src/data/db --quiet",
    "start": "node --inspect=5858 -r ts-node/register ./app.ts",
    "start:watch": "nodemon 'src/app.ts' --exec 'ts-node' ./src/app.ts -e ts,graphql",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./"
    ],
    "exec": "npm start:ts",
    "ext": "ts"
  },
  "dependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/mongoose": "^5.7.20",
    "@types/node": "^14.0.1",
    "apollo-server": "^2.25.3",
    "apollo-server-express": "^2.13.1",
    "bcrypt": "^4.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "express": "~4.16.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^5.0.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "kill-port": "^1.6.0",
    "mongoose": "^5.9.14",
    "morgan": "~1.9.1",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "jshint": "^2.11.1"
  }
}
